{
  "name": "fancy-cursor",
  "version": "0.1.3",
  "type": "module",
  "main": "./bundle/cjs/index.js",
  "module": "./bundle/esm/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "import": "./bundle/esm/index.js",
      "require": "./bundle/cjs/index.js"
    }
  },
  "files": [
    "bundle",
    "public",
    "src",
    "README.md"
  ],
  "contributors": [
    "Domenicobrz",
    "yuran1811"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuran1811/fancy-cursor.git"
  },
  "homepage": "https://github.com/yuran1811/fancy-cursor",
  "bugs": "https://github.com/yuran1811/fancy-cursor/issues",
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "bundle:esm": "esbuild src/shaders/*.ts src/index.ts --tsconfig=tsconfig.prod.json --format=esm --outdir=bundle/esm --tree-shaking=true --bundle --minify",
    "bundle:cjs": "esbuild src/shaders/*.ts src/index.ts --tsconfig=tsconfig.prod.json --format=cjs --outdir=bundle/cjs --tree-shaking=true --bundle --minify",
    "bundle": "pnpm bundle:esm && pnpm bundle:cjs",
    "prepublish": "pnpm bundle",
    "publish": "npm publish"
  },
  "peerDependencies": {
    "@types/three": "^0.173.0",
    "three": "^0.173.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  }
}
